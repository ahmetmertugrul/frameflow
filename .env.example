# FrameFlow Environment Variables
# Copy this file to .env and fill in your actual API keys

# ============================================
# LLM Inference
# ============================================

# SambaNova AI - Fast LLM inference for screenplay generation
# Get your API key from: https://sambanova.ai
SAMBANOVA_API_KEY=your_sambanova_api_key_here

# ============================================
# Image Generation
# ============================================

# Hyperbolic AI - Image generation for storyboard frames (SDXL/Flux)
# Get your API key from: https://hyperbolic.xyz
HYPERBOLIC_API_KEY=your_hyperbolic_api_key_here

# ============================================
# Embeddings & Vector Storage
# ============================================

# Nebius AI - Embeddings for character consistency
# Get your API key from: https://studio.nebius.ai
NEBIUS_API_KEY=your_nebius_api_key_here

# ============================================
# MCP Server Hosting
# ============================================

# Blaxel AI - MCP server deployment platform
# Get your API key from: https://blaxel.ai
BLAXEL_API_KEY=your_blaxel_api_key_here

# ============================================
# Cloud Deployment
# ============================================

# Modal.com - Gradio app hosting and GPU functions
# Get your tokens from: https://modal.com/settings
MODAL_TOKEN_ID=your_modal_token_id_here
MODAL_TOKEN_SECRET=your_modal_token_secret_here

# ============================================
# Application Settings
# ============================================

# Environment (development, production)
ENVIRONMENT=development

# Output directory for generated files
OUTPUT_DIR=./outputs

# Default model configurations
DEFAULT_LLM_MODEL=Meta-Llama-3.1-70B-Instruct
DEFAULT_IMAGE_MODEL=SDXL1.0-base
DEFAULT_EMBEDDING_MODEL=text-embedding-ada-002

# Generation limits
MAX_SCENES_PER_SCREENPLAY=50
MAX_STORYBOARD_FRAMES=16
MAX_CHARACTERS=10

# Timeouts (seconds)
LLM_TIMEOUT=60
IMAGE_TIMEOUT=120
EXPORT_TIMEOUT=180

# ============================================
# Optional: Advanced Settings
# ============================================

# Enable debug mode (set to true for verbose logging)
DEBUG=false

# Cache settings
ENABLE_CACHE=true
CACHE_TTL=3600

# Rate limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# HuggingFace (for model downloads)
# HUGGINGFACE_TOKEN=your_hf_token_here

# ============================================
# Notes
# ============================================

# 1. Never commit your actual .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use different keys for development and production
# 4. Check each platform's documentation for API limits
# 5. Some services may require additional setup (OAuth, etc.)
